# $Id: dohard 13063 2009-03-12 00:28:45Z zmedico $

if [[ $# -ne 2 ]] ; then
	echo "$0: two arguments needed" 1>&2
	exit 1
fi

destdir=${2%/*}
[[ ! -d ${D}${destdir} ]] && dodir "${destdir}"

exec ln -f "${D}$1" "${D}$2"
