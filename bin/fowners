# $Header$

if [ $# -lt 2 ] ; then
	echo "${0}: at least two arguments needed" 1>&2
	exit 1
fi

OPTS=""
while [ "${1:0:1}" = "-" ] ; do
	OPTS="${OPTS} $1"
	shift
done

OWNER="${1}"
shift

for FILE in "$@" ; do
	chown ${OPTS} "${OWNER}" "${D}${FILE}"
done
