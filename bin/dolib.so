if [ -z "${CONF_LIBDIR}" ]; then
	# we need this to default to lib so that things dont break
	CONF_LIBDIR="lib"
fi

if [ ${#} -lt 1 ] ; then
	echo "${0}: at least one argument needed"
	exit 1
fi

if [ ! -z "${CBUILD}" ] && [ "${CBUILD}" != "${CHOST}" ]; then
	STRIP=${CHOST}-strip
else
	STRIP=strip
fi

if [ ! -d "${D}${DESTTREE}/${CONF_LIBDIR}" ] ; then
	install -d "${D}${DESTTREE}/${CONF_LIBDIR}"
fi

for x in "$@" ; do
	if [ -e "${x}" ] ; then
		if [ "${FEATURES//*nostrip*/true}" != "true" ] && [ "${RESTRICT//*nostrip*/true}" != "true" ] ; then
			${STRIP} --strip-debug "${x}"
		fi
		install -m0755 "${x}" "${D}${DESTTREE}/${CONF_LIBDIR}"
	else
		echo "${0}: ${x} does not exist"
	fi
done
