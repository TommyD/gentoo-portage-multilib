#!/bin/bash
# Copyright 1999-2003 Gentoo Technologies, Inc.
# Distributed under the terms of the GNU General Public License v2
# $Header$

if [ -n "${DEBUGBUILD}" ] ; then
	exit 0
fi

if [ ! -z "${CBUILD}" ] && [ "${CBUILD}" != "${CHOST}" ]; then
	STRIP=${CHOST}-strip
else:
	STRIP=strip
fi

echo -n "strip: "
for x in "$@"; do # "$@" quotes each element... Plays nice with spaces.
	if [ -d "${D}${x}" ]; then
		# We only want files. So make a pass for each directory and call again.
		find "${D}${x}" -type f \( -perm +0111 -or -regex '\.so$|\.so\.' \) |
				tr '\n' '\001' | sed -r 's:(\d001?)${D}:\1:g' |
				tr '\001' '\000' | xargs -0 -r -n500 prepstrip
	else
		f=$(file "${x}")
		if [ -z "${f/*SB executable*/}" ]; then
			echo -n "${x}"
			${STRIP} "${x}"
		fi
		if [ -z "${f/*SB shared object*/}" ]; then
			echo -n "${x}"
			${STRIP} --strip-debug "${x}"
		fi
	fi
done
