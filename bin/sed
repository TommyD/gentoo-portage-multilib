#!/bin/bash
# Copyright 2006 Gentoo Foundation
# Distributed under the terms of the GNU General Public License v2
 
scriptpath="${BASH_SOURCE[0]}"

if [[ -n ${ESED} ]]; then
	exec ${ESED} "$@"
elif type -p gsed > /dev/null ; then
	exec gsed "$@"
else
	old_IFS="${IFS}"
	IFS=":"
 
	for path in $PATH; do
		[[ ${path}/sed == $scriptpath ]] && continue
		if [[ -x $path/sed ]]; then
			exec $path/sed "$@"	
			exit 0
		fi
	done
	
	IFS="${old_IFS}"
fi
 
exit 1
