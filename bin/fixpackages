import os,sys
os.environ["PORTAGE_CALLER"]="fixpackages"
sys.path = ["/usr/lib/portage/pym"]+sys.path

import portage

mysettings = portage.settings
mytrees = portage.db
mtimedb = portage.mtimedb

portage.global_updates(mysettings, mytrees, mtimedb["updates"])

print
print "Done."
print
