# $Id$

source "${PORTAGE_BIN_PATH:-/usr/lib/portage/bin}"/isolated-functions.sh

if [[ -z $1 ]] ; then 
	mandir="${D}usr/share/man"
else
	mandir="${D}$1/man"
fi

if [[ ! -d ${mandir} ]] ; then
	eqawarn "QA Notice: prepman called with non-existent dir '${mandir#${D}}'"
	exit 0
fi

exec ecompressdir "${mandir#${D}}"
