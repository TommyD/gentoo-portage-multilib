# $Header$

filelist=`sed "s/['\"]/\\\&/g"`

for f in $filelist ; do
	file=`grep -r "$f ->" /var/db/pkg/*/*/CONTENTS`
	file=${file#/*/*/*/*/}
	file=${file%*/CONTENTS:*}
	echo $file
done | sort -u
