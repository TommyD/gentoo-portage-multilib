# $Id: /var/cvsroot/gentoo-src/portage/bin/dosym,v 1.7 2004/10/04 13:56:50 vapier Exp $

if [[ $# -ne 2 ]] ; then
	echo "$0: two arguments needed" 1>&2
	exit 1
fi

destdir=${2%/*}
[[ ! -d ${D}${destdir} ]] && dodir "${destdir}"

exec ln -snf "$1" "${D}$2"
