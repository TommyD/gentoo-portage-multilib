# $Header: /var/cvsroot/gentoo-src/portage/bin/prepallman,v 1.10 2004/10/04 13:56:50 vapier Exp $

echo "man:"
for x in "${D}"opt/*/man "${D}"usr/share/man "${D}"usr/local/man "${D}"usr/X11R6/man ; do
	if [ -d "${x}" ]
	then
		prepman "`echo "${x}" | sed -e "s:${D}::" -e "s:/man[/]*$::"`"
	fi
done
