# $Id$

source "${PORTAGE_BIN_PATH:-/usr/lib/portage/bin}"/isolated-functions.sh

ret=0

find "${D}" -type d -name man > "${T}"/prepallman.filelist
while read mandir ; do
	mandir=${mandir#${D}}
	prepman "${mandir%/man}"
	((ret+=$?))
done < "${T}"/prepallman.filelist

exit ${ret}
