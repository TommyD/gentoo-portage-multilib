# $Header: /var/cvsroot/gentoo-src/portage/bin/fperms,v 1.6 2004/10/04 13:56:50 vapier Exp $

if [ ${#} -lt 2 ] ; then
	echo "${0}: at least two arguments needed"
	exit 1
fi

PERM="${1}"
shift
for FILE in $*; do
	chmod "${PERM}" "${D}${FILE}"
done
